<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cvPersonalDevice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_twenty_dp"
        app:contentPadding="@dimen/zero_dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp"
        app:cardElevation="@dimen/five_dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:id="@+id/viewHorizontal"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="GroupName"
                android:layout_weight="4"/>
            <TextView
                android:id="@+id/tvTotalMembers"
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_login_submit"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="6">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_gravity="center|left">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivMember1"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center|left"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white"
                        android:src="@drawable/profile_placeholder"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivMember2"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center|left"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:src="@drawable/profile_placeholder"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivMember3"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="@dimen/thirty_dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white"
                        android:src="@drawable/profile_placeholder"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivMember4"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="@dimen/forty_five_dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white"
                        android:src="@drawable/profile_placeholder"/>

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/fifty_dp"
                        android:text="+3"/>-->



                </FrameLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/five_dp"
                android:src="@drawable/arrow_right_icon"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
