<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/eighty_dp"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/five_dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_profile"/>

                <ImageView
                    android:id="@+id/ivUserStatus"
                    android:layout_width="@dimen/fifteen_dp"
                    android:layout_height="@dimen/fifteen_dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:background="@drawable/round_shape_green"/>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="@dimen/ten_dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tvPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member name"/>
            <TextView
                android:id="@+id/tvDesingnation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designation"
                android:layout_marginTop="@dimen/five_dp"
                android:textColor="@color/colorPrimary"/>


        </LinearLayout>
        <TextView
            android:id="@+id/tvCodeAcceptStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepted"
            android:textColor="@color/green_color"
            android:layout_weight="4"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        android:background="@color/darkGrey"/>

</LinearLayout>
