<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/ten_dp"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:gravity="center|bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="@dimen/twelve_sp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="10 AM"/>
        <View
            android:id="@+id/viewRound"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:background="@drawable/round_shape"/>
        <View
            android:id="@+id/viewHorizontal"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/two_dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@color/colorPrimary"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/llScheduleStartEnd"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/thirty_dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_login_submit"
            android:layout_weight="5.5">
            <TextView
                android:id="@+id/tvScheduleStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Schedule start"/>

        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/view_vertical"
        android:layout_width="@dimen/two_dp"
        android:layout_height="@dimen/thirty_dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/eighty_dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:gravity="center|top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_sp"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:textStyle="bold"
            android:text="10 AM"/>
        <View
            android:id="@+id/viewRound1"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:background="@drawable/round_shape"/>
        <View
            android:id="@+id/viewHorizontal1"
            android:layout_width="@dimen/zero_dp"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_height="@dimen/two_dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/llScheduleStartEnd1"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/thirty_dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_login_submit"
            android:layout_weight="5.5">
            <TextView
                android:id="@+id/tvScheduleEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Schedule end"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/five_dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvReminingTime"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="1.5"
            android:visibility="gone"
            android:textStyle="bold"
            android:text=" "/>

        <View
            android:id="@+id/viewDivider"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/one_dp"
            android:layout_gravity="center"
            android:background="@color/link_color"
            android:layout_weight="7.5"/>



    </LinearLayout>


</LinearLayout>
